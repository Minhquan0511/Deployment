{
  "name": "edulearn-platform",
  "private": true,
  "scripts": {
    "install:frontend": "npm install --prefix frontend",
    "install:backend": "npm install --prefix backend",
    "install:all": "npm run install:frontend && npm run install:backend",
    "build": "npm run install:all && npm --prefix frontend run build",
    "start": "node backend/index.js", 
    "dev": "npm --prefix frontend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "build:backend": "npm --prefix backend run build",
    "preview": "npm --prefix frontend run preview",
    "lint:backend": "npm --prefix backend run lint",
    "test:backend": "npm --prefix backend run test",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:test": "cypress run --spec 'cypress/e2e/**/*.cy.js'"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cypress": "^15.8.1",
    "tailwindcss": "^4.1.17",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.86.0",
    "axios": "^1.13.2",
    "jsonwebtoken": "^9.0.3",
    "lottie-react": "^2.4.1",
    "react-markdown": "^10.1.0",
    "supabase": "^2.65.5"
  },
  "version": "1.0.0",
  "description": "Full-stack codebase for EduLearn, split into dedicated `frontend/` and `backend/` workspaces, with shared documentation under `docs/`.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
